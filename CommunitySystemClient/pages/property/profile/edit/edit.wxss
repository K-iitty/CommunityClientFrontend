/* pages/property/profile/edit/edit.wxss */
/* 员工资料管理 - 编辑个人信息页面样式 */

.page {
  background-color: #f5f7fa;
  min-height: 100vh;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid #dbeafe;
  border-top-color: #3b82f6;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 16rpx;
}

.loading-text {
  font-size: 14px;
  color: #9ca3af;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* 表单容器 */
.form-container {
  padding: 24rpx 16rpx;
}

/* 页面头部 */
.header {
  background: linear-gradient(135deg, #35b6f4 0%, #35b6f4 100%);
  color: white;
  padding: 32rpx 24rpx;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(59, 130, 246, 0.15);
}

.header-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.header-subtitle {
  font-size: 14px;
  opacity: 0.9;
}

/* 表单组 */
.form-group {
  background-color: white;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.08);
}

/* 表单标签 */
.form-label {
  display: flex;
  align-items: center;
  font-size: 14px;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 12rpx;
  gap: 4rpx;
}

.required {
  color: #ef4444;
  font-weight: bold;
}

/* 输入框 */
.form-input {
  width: 100%;
  padding: 12rpx 14rpx;
  border: 1rpx solid #d1d5db;
  border-radius: 8rpx;
  font-size: 14px;
  background-color: #f9fafb;
  color: #1f2937;
  line-height: 1.6;
}

.form-input:focus {
  border-color: #3b82f6;
  background-color: white;
}

.form-input.error {
  border-color: #ef4444;
  background-color: #fef2f2;
}

/* 字数统计 */
.char-count {
  font-size: 12px;
  color: #9ca3af;
  text-align: right;
  margin-top: 8rpx;
}

/* 错误信息 */
.error-text {
  font-size: 12px;
  color: #ef4444;
  margin-top: 8rpx;
}

/* 提示信息 */
.form-tip {
  background-color: #eff6ff;
  border-left: 3rpx solid #3b82f6;
  padding: 12rpx 16rpx;
  border-radius: 6rpx;
  font-size: 12px;
  color: #0c4a6e;
  margin-bottom: 24rpx;
}

/* 按钮容器 */
.button-container {
  display: flex;
  gap: 12rpx;
  margin-top: 24rpx;
}

/* 按钮样式 */
.btn-cancel,
.btn-submit {
  flex: 1;
  padding: 14rpx 24rpx;
  font-size: 16px;
  font-weight: bold;
  border: none;
  border-radius: 8rpx;
  height: 52rpx;
  line-height: 52rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.btn-cancel {
  background-color: #f3f4f6;
  color: #6b7280;
  border: 1rpx solid #d1d5db;
}

.btn-cancel:active:not([disabled]) {
  background-color: #e5e7eb;
}

.btn-submit {
  background: linear-gradient(135deg, #35b6f4 0%, #35b6f4 100%);
  color: white;
  box-shadow: 0 2rpx 8rpx rgba(59, 130, 246, 0.3);
}

.btn-submit:active:not([disabled]) {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.4);
}

.btn-cancel[disabled],
.btn-submit[disabled] {
  opacity: 0.6;
  cursor: not-allowed;
}

/* 表单分组组 */
.form-group-section {
  margin-bottom: 20rpx;
}

.form-section-title {
  font-size: 14px;
  font-weight: 600;
  color: #1f2937;
  padding: 16rpx 20rpx;
  background-color: #f9fafb;
  border-radius: 8rpx 8rpx 0 0;
  border-bottom: 1rpx solid #e5e7eb;
  border-left:5px solid #35b6f4;
}

.form-group-section .form-group {
  background-color: white;
  padding: 16rpx 20rpx;
  border-bottom: 1rpx solid #e5e7eb;
  margin-bottom: 0;
  border-radius: 0;
  box-shadow: none;
}

.form-group-section .form-group:last-child {
  border-bottom: none;
  border-radius: 0 0 8rpx 8rpx;
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.08);
}

/* Picker 样式 */
.form-picker {
  width: 100%;
}

.picker-input {
  color: #1f2937;
  background-color: #f9fafb;
  border: 1rpx solid #d1d5db;
}

.picker-input::after {
  content: '';
}

/* 上传按钮 */
.btn-upload {
  width: 100%;
  padding: 12rpx 16rpx;
  background-color: #eff6ff;
  color: #0c4a6e;
  border: 1rpx dashed #3b82f6;
  border-radius: 8rpx;
  font-size: 14px;
  margin-top: 12rpx;
  line-height: 1.6;
  height: auto;
  min-height: 44rpx;
}

.btn-upload:active {
  background-color: #dbeafe;
}

/* 照片网格 */
.photo-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
  margin-top: 12rpx;
  margin-bottom: 12rpx;
}

.photo-container {
  position: relative;
  width: 100%;
  aspect-ratio: 1;
  border-radius: 8rpx;
  overflow: hidden;
  background-color: #f3f4f6;
  border: 1rpx solid #e5e7eb;
}

.uploaded-photo {
  width: 100%;
  height: 100%;
  display: block;
}

.photo-delete-btn {
  position: absolute;
  top: 4rpx;
  right: 4rpx;
  width: 32rpx;
  height: 32rpx;
  background-color: rgba(239, 68, 68, 0.9);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16rpx;
  font-weight: bold;
  cursor: pointer;
  z-index: 10;
}