/* pages/property/feedback/process/process.wxss */

.page {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 头部区域 */
.header {
  background: linear-gradient(135deg, #35b6f4 0%, #1e88e5 100%);
  padding: 24rpx;
  color: white;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 12rpx;
}

.header-content {
  flex: 1;
}

.header-title {
  font-size: 16px;
  font-weight: 700;
  display: block;
  margin-bottom: 8rpx;
}

.issue-id {
  font-size: 12px;
  opacity: 0.9;
}

.status-badge {
  padding: 6rpx 12rpx;
  background-color: rgba(255, 255, 255, 0.3);
  border-radius: 20rpx;
  font-size: 11px;
  font-weight: 600;
  white-space: nowrap;
}

/* 分块区域 */
.section {
  margin: 16rpx 0;
  padding: 0 12rpx;
}

.section-title {
  font-size: 14px;
  font-weight: 700;
  color: #333;
  margin-bottom: 12rpx;
  padding: 0 8rpx;
}

/* 汇总卡片 */
.summary-card {
  background: linear-gradient(135deg, #fff9e6 0%, #fffbf0 100%);
  padding: 20rpx;
  border-radius: 12rpx;
  border-left: 5rpx solid #ffb300;
  box-shadow: 0 2rpx 8rpx rgba(255, 179, 0, 0.1);
}

.summary-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 14rpx;
  padding-bottom: 12rpx;
  border-bottom: 1rpx solid rgba(255, 179, 0, 0.1);
  gap: 12rpx;
}

.summary-item:last-child {
  margin-bottom: 0;
  border-bottom: none;
}

.summary-label {
  font-size: 12px;
  color: #666;
  font-weight: 700;
  min-width: 60rpx;
  flex-shrink: 0;
}

.summary-value {
  font-size: 12px;
  color: #333;
  flex: 1;
  text-align: right;
  word-break: break-word;
  font-weight: 600;
}

/* 表单卡片 */
.form-card {
  background-color: white;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
}

.form-section {
  padding: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.form-section:last-child {
  border-bottom: none;
}

.form-label {
  font-size: 14px;
  font-weight: 700;
  color: #333;
  margin-bottom: 14rpx;
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.form-input {
  width: 100%;
  padding: 14rpx;
  background-color: #f9f9f9;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 14px;
  color: #333;
  line-height: 1.6;
  font-family: inherit;
  box-sizing: border-box;
}

.form-input:focus {
  background-color: white;
  border-color: #35b6f4;
  box-shadow: 0 0 0 3rpx rgba(53, 182, 244, 0.1);
}

.textarea {
  resize: none;
  min-height: 120rpx;
  max-height: 300rpx;
}

.form-hint {
  font-size: 12px;
  color: #999;
  margin-top: 8rpx;
  text-align: right;
}

/* 图片上传区域 */
.upload-section {
  background-color: white;
  padding: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.upload-title {
  font-size: 14px;
  font-weight: 700;
  color: #333;
  margin-bottom: 14rpx;
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.upload-tip {
  font-size: 12px;
  color: #999;
  margin-top: 12rpx;
  text-align: center;
}

.upload-button {
  width: 100%;
  padding: 24rpx;
  background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
  border: 2rpx dashed #35b6f4;
  border-radius: 10rpx;
  text-align: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  cursor: pointer;
  margin: 16rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.upload-button:active:not(.disabled) {
  background: linear-gradient(135deg, #bbdefb 0%, #90caf9 100%);
  border-color: #1e88e5;
  box-shadow: 0 4rpx 12rpx rgba(53, 182, 244, 0.2);
  transform: translateY(-2rpx);
}

.upload-button.disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.upload-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
  display: block;
}

.upload-text {
  font-size: 14px;
  color: #35b6f4;
  font-weight: 600;
}

/* 图片预览网格 */
.image-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.image-item {
  position: relative;
  width: 100%;
  aspect-ratio: 1;
  border-radius: 8rpx;
  overflow: hidden;
  background-color: #f0f0f0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  cursor: pointer;
  transition: all 0.3s;
}

.image-item:active {
  transform: scale(0.95);
}

.image-item image {
  width: 100%;
  height: 100%;
  display: block;
}

.delete-btn {
  position: absolute;
  top: 4rpx;
  right: 4rpx;
  width: 32rpx;
  height: 32rpx;
  background-color: rgba(244, 67, 54, 0.9);
  border: none;
  border-radius: 50%;
  color: white;
  font-size: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  cursor: pointer;
  transition: all 0.2s;
  line-height: 32rpx;
  z-index: 10;
}

.delete-btn:active {
  background-color: #f44336;
  transform: scale(1.1);
}

/* 操作按钮区域 */
.action-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 16rpx 16rpx 24rpx;
  background-color: white;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  gap: 12rpx;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.08);
  z-index: 100;
}

.btn {
  flex: 1;
  padding: 14rpx 16rpx;
  border: none;
  border-radius: 10rpx;
  font-size: 14px;
  font-weight: 700;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  letter-spacing: 0.5rpx;
  display: block;
  width: 100%;
  box-sizing: border-box;
  line-height: 1.5;
}

.btn:active:not([disabled]) {
  transform: translateY(-2rpx);
}

.btn[disabled] {
  opacity: 0.6;
  cursor: not-allowed;
}

.btn-primary {
  background: linear-gradient(135deg, #35b6f4 0%, #1e88e5 100%);
  color: white;
  box-shadow: 0 2rpx 8rpx rgba(53, 182, 244, 0.2);
}

.btn-primary:active:not([disabled]) {
  box-shadow: 0 8rpx 16rpx rgba(53, 182, 244, 0.4);
}

.btn-secondary {
  background: linear-gradient(135deg, #f5f5f5 0%, #efefef 100%);
  color: #333;
  border: 1rpx solid #e0e0e0;
}

.btn-secondary:active:not([disabled]) {
  background: linear-gradient(135deg, #efefef 0%, #e5e5e5 100%);
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 40rpx 20rpx;
  color: #999;
  font-size: 15rpx;
}

/* 响应式调整 */
@media (min-width: 414px) {
  .image-grid {
    grid-template-columns: repeat(4, 1fr);
  }
}