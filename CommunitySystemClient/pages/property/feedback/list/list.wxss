/* pages/property/feedback/list/list.wxss */

.page {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 搜索栏 */
.search-bar {
  padding: 14rpx 18rpx;
  background-color: white;
  border-bottom: 1rpx solid #eee;
  position: sticky;
  top: 0;
  z-index: 10;
}

.search-input {
  width: 100%;
  padding: 12rpx 16rpx;
  background-color: #f0f0f0;
  border-radius: 20rpx;
  font-size: 12px;
  color: #333;
}

.search-input::placeholder {
  color: #999;
}

/* 状态过滤标签 */
.filter-tags {
  display: flex;
  overflow-x: auto;
  padding: 14rpx 18rpx;
  background-color: white;
  gap: 10rpx;
  border-bottom: 1rpx solid #eee;
}

.filter-tag {
  margin-right: 5px;
  flex-shrink: 0;
  padding: 15rpx 20rpx;
  background-color: #f0f0f0;
  border-radius: 20rpx;
  font-size: 12px;
  color: #666;
  transition: all 0.3s ease;
  font-weight: 600;
}

.filter-tag.active {
  background-color: #35b6f4;
  color: white;
}

/* 容器 */
.container {
  padding: 14rpx 18rpx;
}

/* 反馈卡片 */
.issue-card {
  background-color: #ffffff;
  border-radius: 15px;
  border: 1px solid #ebebeb;
  padding: 18rpx;
  margin-bottom: 14rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.issue-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.08);
}

/* 卡片头部 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 14rpx;
  gap: 12rpx;
}

.issue-title {
  font-size: 14px;
  font-weight: 700;
  color: #333;
  flex: 1;
  line-height: 1.5;
  word-break: break-word;
}

.status-badge {
  font-size: 11px;
  padding: 6rpx 12rpx;
  border-radius: 5rpx;
  white-space: nowrap;
  font-weight: 700;
}

.status-badge.status-pending {
  background-color: #ffebee;
  color: #d42323;
}

.status-badge.status-processing {
  background-color: #fff3e0;
  color: #e69d00;
}

.status-badge.status-completed {
  background-color: #e8f5e9;
  color: #186a3b;
}

/* 卡片行布局 */
.card-row {
  display: flex;
  gap: 16rpx;
  margin-bottom: 12rpx;
  padding: 10rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.card-row:last-of-type {
  border-bottom: none;
  margin-bottom: 0;
  padding-bottom: 0;
}

.info-item {
  display: flex;
  align-items: center;
  gap: 6rpx;
  font-size: 12px;
  flex: 1;
  line-height: 1.5;
}

.info-item .label {
  color: #999;
  font-weight: 700;
  min-width: 50rpx;
  white-space: nowrap;
}

.info-item .value {
    /* background-color: #35b6f4; */
  color: #333 ;
  word-break: break-word;
  font-weight: 600;
  font-size: 12px;
}

/* 紧急度文本 */
.urgency-text {
  background-color: #4ec7ff;
  color: #f1f1f1 !important;
  padding: 4rpx 8rpx;
  border-radius: 10rpx;
  font-size: 11px;
  font-weight: 700;
}

.urgency-text.low {
  background-color: #e0f2fe;
  color: #0284c7;
}

.urgency-text.medium {
  background-color: #fef3c7;
  color: #d97706;
}

.urgency-text.high {
  background-color: #fee2e2;
  color: #dc2626;
}

/* 卡片底部 */
.card-footer {
  display: flex;
  gap: 20rpx;
  padding-top: 10rpx;
  border-top: 1rpx solid #f0f0f0;
}

.time-info {
  display: flex;
  align-items: center;
  gap: 6rpx;
  font-size: 11px;
  flex: 1;
}

.time-label {
  color: #999;
  font-weight: 700;
  white-space: nowrap;
}

.time-value {
  color: #666;
  font-weight: 600;
  word-break: break-word;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 20rpx;
  text-align: center;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  color: #999;
  font-size: 12px;
  font-weight: 500;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 40rpx 20rpx;
  color: #999;
  font-size: 12px;
}

/* 加载完成提示 */
.load-complete {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 11px;
  margin-top: 10rpx;
}