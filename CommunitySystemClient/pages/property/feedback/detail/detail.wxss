/* pages/property/feedback/detail/detail.wxss */

.page {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 100rpx;
}

/* 返回导航 */
.back-button {
  padding: 16rpx 24rpx;
  font-size: 28rpx;
  color: #35b6f4;
  background-color: transparent;
  border: none;
  text-align: left;
  transition: opacity 0.2s;
}

.back-button:active {
  opacity: 0.7;
}

/* 详情卡片 */
.detail-card {
  background-color: white;
  padding: 24rpx;
  margin: 12rpx 0;
}

/* 详情头部 */
.detail-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 12rpx;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.title-section {
  flex: 1;
}

.issue-title {
  font-size: 18px;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 8rpx;
  line-height: 1.4;
  word-break: break-word;
}

.status-badge {
  width: 50px;
  font-size: 11px;
  padding: 6rpx 12rpx;
  border-radius: 4rpx;
  font-weight: 600;
  white-space: nowrap;
}

.status-badge.status-pending {
  background-color: #ffebee;
  color: #c23030;
}

.status-badge.status-processing {
  background-color: #fff3e0;
  color: #e65100;
}

.status-badge.status-completed {
  background-color: #e8f5e9;
  color: #186a3b;
}

/* 部分标题 */
.section-title {
  font-size: 12px;
  font-weight: 600;
  color: #1f2937;
  margin-top: 16rpx;
  margin-bottom: 12rpx;
  padding-bottom: 8rpx;
  /* border-bottom: 2rpx solid #35b6f4; */
}
.section-title-1{
    margin-left: 10px;
  
}

/* 信息网格 */
.detail-grid {
  background-color: #f7f7f7e5;
  padding-left: 10px;
  border-radius: 5px;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 12rpx 0;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #f3f4f6;
  font-size: 12px;
  gap: 12rpx;
}

.detail-item:nth-child(2n) {
  padding-left: 12rpx;
}

.detail-item:nth-last-child(1),
.detail-item:nth-last-child(2) {
  border-bottom: none;
}

.detail-item .label {
  color: #6d6d6d;
  font-weight: 400;
  min-width: 70rpx;
  white-space: nowrap;
}

.detail-item .value {
    /* margin-left: 10px; */
  color: #1f2937;
  text-align: center;
  flex: 1;
  word-break: break-word;
  font-size: 12px;
  font-weight: 500;
}

/* 描述文本 */
.description {
  padding: 14rpx;
  background-color: #f9fafb;
  /* border-left: 4rpx solid #35b6f4; */
  border-radius: 6rpx;
  font-size: 12px;
  color: #1f2937;
  line-height: 1.6;
  margin-bottom: 12rpx;
  word-break: break-word;
}

/* 时间线部分 */
.timeline-section {
  background-color: white;
  padding: 24rpx;
  margin: 12rpx 0;
}

.timeline {
  position: relative;
}

.timeline-item {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
  position: relative;
  padding-left: 32rpx;
}

.timeline-dot {
  position: absolute;
  left: 0;
  top: 4rpx;
  width: 16rpx;
  height: 16rpx;
  background-color: #35b6f4;
  border-radius: 50%;
  border: 3rpx solid white;
  box-shadow: 0 0 0 2rpx #35b6f4;
}

/* 物业员工的追加记录 */
.timeline-dot.staff {
  background-color: #35b6f4;
  box-shadow: 0 0 0 2rpx #35b6f4;
}

/* 业主的追加记录 */
.timeline-dot.owner {
  background-color: #10b981;
  box-shadow: 0 0 0 2rpx #10b981;
}

.timeline-item:not(:last-child)::before {
  content: '';
  position: absolute;
  left: 7rpx;
  top: 16rpx;
  width: 2rpx;
  height: calc(100% + 8rpx);
  background-color: #e5e7eb;
}

.timeline-content {
  flex: 1;
}

.timeline-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
  gap: 12rpx;
}

.timeline-operator {
  display: flex;
  align-items: center;
  gap: 8rpx;
  flex: 1;
}

.operator-type {
  display: inline-block;
  font-size: 10px;
  padding: 3rpx 15rpx;
  border-radius: 8rpx;
  font-weight: 700;
  white-space: nowrap;
  color: white;
}

/* 物业标签 */
.operator-type.staff {
  background-color: #35b6f4;
}

/* 业主标签 */
.operator-type.owner {
  background-color: #20cc45d7;
}

.operator-name {
  font-size: 12px;
  color: #374151;
  font-weight: 600;
}

.timeline-time {
  font-size: 11px;
  color: #9ca3af;
  white-space: nowrap;
}

.timeline-tag {
  display: inline-block;
  font-size: 11px;
  padding: 4rpx 10rpx;
  background-color: #dbeafe;
  color: #1e76fc;
  border-radius: 4rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.timeline-text {
  font-size: 12px;
  color: #1f2937;
  line-height: 1.6;
  padding: 10rpx;
  background-color: #f9fafb;
  border-radius: 6rpx;
  margin-bottom: 8rpx;
  word-break: break-word;
}

.timeline-note {
  font-size: 11px;
  color: #6b7280;
  padding: 8rpx 10rpx;
  background-color: #f3f4f6;
  border-radius: 4rpx;
  margin-top: 8rpx;
  font-style: italic;
  border-left: 3rpx solid #f59e0b;
}

.timeline-attachments {
  font-size: 11px;
  color: #6b7280;
  padding: 8rpx 10rpx;
  background-color: #f3f4f6;
  border-radius: 4rpx;
  margin-top: 8rpx;
  border-left: 3rpx solid #8b5cf6;
}

/* 空时间线 */
.empty-timeline {
  text-align: center;
  padding: 40rpx 20rpx;
  color: #9ca3af;
  font-size: 12px;
}

/* 操作按钮 */
.action-buttons {
  position: static;
  bottom: auto;
  left: auto;
  right: auto;
  padding: 16rpx 16rpx 24rpx;
  background-color: transparent;
  border-top: none;
  display: flex;
  flex-direction: row;
  gap: 12rpx;
  box-shadow: none;
  margin-top: 20rpx;
}

.btn {
  padding: 20px 0px !important;
  /* margin-left: 30px !important;
  margin-right: 30px !important; */
  flex: 1;
  padding: 10rpx 16rpx;
  border-radius: 6rpx;
  border: none;
  font-size: 12px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  height: 40rpx;
  line-height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  white-space: nowrap;
}

.btn-primary {
  background: linear-gradient(135deg, #35b6f4 0%, #35b6f4 100%);
  color: white !important;
  flex: 1;
}

.btn-primary:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.btn-secondary {
  background: linear-gradient(135deg, #a7a7a7 0%, #aaaaaa 100%);
  color: white;
  flex: 1;
}

.btn-secondary:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.btn-gray {
  background-color: #dbdbdb;
  color: #1f2937;
  flex: 1;
}

.btn-gray:active {
  opacity: 0.9;
  transform: scale(0.98);
}

/* 模态框背景 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 999;
}

/* 模态框容器 */
.modal {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: white;
  border-radius: 20rpx 20rpx 0 0;
  z-index: 1000;
  padding: 0;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.1);
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

/* 模态框头部 */
.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  border-bottom: 1rpx solid #f3f4f6;
}

.modal-title {
  font-size: 16px;
  font-weight: bold;
  color: #1f2937;
}

.modal-close {
  font-size: 32rpx;
  color: #9ca3af;
  padding: 0 8rpx;
  cursor: pointer;
}

.modal-close:active {
  opacity: 0.7;
}

/* 模态框内容 */
.modal-body {
  padding: 24rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.modal-label {
  font-size: 12px;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 12rpx;
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.modal-textarea {
  width: 100%;
  padding: 12rpx 14rpx;
  border: 1rpx solid #d1d5db;
  border-radius: 6rpx;
  font-size: 12px;
  color: #1f2937;
  font-family: inherit;
  line-height: 1.5;
  min-height: 100rpx;
  box-sizing: border-box;
  resize: vertical;
}

.modal-textarea:focus {
  border-color: #35b6f4;
  box-shadow: 0 0 0 3rpx rgba(53, 182, 244, 0.1);
}

.char-count {
  font-size: 11px;
  color: #9ca3af;
  text-align: right;
  margin-top: 8rpx;
  margin-bottom: 20rpx;
}

/* 模态框底部 */
.modal-footer {
  padding: 16rpx 24rpx 24rpx;
  display: flex;
  gap: 12rpx;
  border-top: 1rpx solid #f3f4f6;
}