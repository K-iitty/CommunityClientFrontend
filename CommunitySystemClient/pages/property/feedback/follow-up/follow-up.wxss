/* pages/property/feedback/follow-up/follow-up.wxss */

.page {
  background: linear-gradient(180deg, #f0f4f8 0%, #fafbfc 100%);
  min-height: 100vh;
  padding: 0;
  padding-bottom: 140rpx;
}

/* ==================== 头部区域 ==================== */
.header {
  background: linear-gradient(135deg, #35b6f4 0%, #35b6f4 100%);
  padding: 32rpx 24rpx;
  color: white;
  box-shadow: 0 4rpx 16rpx rgba(53, 182, 244, 0.15);
  border-radius: 0 0 16rpx 16rpx;
}

.header-title {
  font-size: 20px;
  font-weight: 700;
  display: block;
  margin-bottom: 8rpx;
  letter-spacing: 0.5rpx;
}

.header-subtitle {
  font-size: 12px;
  opacity: 0.9;
  display: block;
  font-weight: 500;
}

/* ==================== 内容区域 ==================== */
.content {
  padding: 24rpx 16rpx;
}

/* ==================== 表单区域 ==================== */
.form-section {
  background-color: white;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.form-title {
  font-size: 14px;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 8rpx;
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.required {
  color: #dc2626;
  font-weight: 700;
}

.form-description {
  font-size: 12px;
  color: #9ca3af;
  margin-bottom: 16rpx;
  font-weight: 500;
}

/* ==================== 追加类型选择 ==================== */
.type-options {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.option-item {
  padding: 14rpx 16rpx;
  background: linear-gradient(135deg, #f9fafb 0%, #f3f4f6 100%);
  border: 2rpx solid #e5e7eb;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  user-select: none;
  -webkit-user-select: none;
}

.option-item:active {
  transform: translateY(-2rpx);
  background: linear-gradient(135deg, #e0f2fe 0%, #dbeafe 100%);
  border-color: #35b6f4;
  box-shadow: 0 4rpx 12rpx rgba(53, 182, 244, 0.15);
  opacity: 0.95;
}

.option-item.active {
  background: linear-gradient(135deg, #35b6f4 0%, #1e88e5 100%);
  border-color: #1e88e5;
  color: white;
  box-shadow: 0 4rpx 16rpx rgba(53, 182, 244, 0.25);
}

.option-radio {
  width: 20rpx;
  height: 20rpx;
  border: 2rpx solid #d1d5db;
  border-radius: 50%;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  font-weight: 700;
  color: white;
  background-color: transparent;
  transition: all 0.2s;
}

.option-item.active .option-radio {
  background-color: rgba(255, 255, 255, 0.3);
  border-color: white;
  color: white;
}

.option-label {
  font-size: 12px;
  font-weight: 500;
  color: #374151;
  flex: 1;
}

.option-item.active .option-label {
  color: white;
  font-weight: 700;
}

/* ==================== 表单输入 ==================== */
.form-textarea {
  width: 100%;
  padding: 14rpx 16rpx;
  background-color: #f9fafb;
  border: 2rpx solid #e5e7eb;
  border-radius: 10rpx;
  font-size: 12px;
  color: #1f2937;
  line-height: 1.6;
  font-family: inherit;
  box-sizing: border-box;
  transition: all 0.3s ease;
  min-height: 100rpx;
}

.textarea-follow-up {
  min-height: 140rpx;
  max-height: 300rpx;
}

.textarea-note {
  min-height: 100rpx;
  max-height: 250rpx;
}

.form-textarea::placeholder {
  color: #bbb;
}

.form-textarea:focus {
  background-color: white;
  border-color: #35b6f4;
  box-shadow: 0 0 0 3rpx rgba(53, 182, 244, 0.1);
}

/* ==================== 字符计数 ==================== */
.char-count {
  font-size: 11px;
  color: #9ca3af;
  text-align: right;
  margin-top: 8rpx;
  font-weight: 600;
}

/* ==================== 验证提示 ==================== */
.validation-tip {
  font-size: 11px;
  color: #ff6464;
  margin-top: 8rpx;
  display: flex;
  align-items: center;
  gap: 6rpx;
  font-weight: 500;
}

/* ==================== 操作按钮 ==================== */
.action-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 16rpx 24rpx 24rpx;
  background-color: white;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  gap: 12rpx;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.08);
  z-index: 10;
}

.btn {
  flex: 1;
  padding: 16px 23px;
  border: none;
  border-radius: 10rpx;
  font-size: 14px;
  font-weight: 700;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  letter-spacing: 0.5rpx;
  height: 48rpx;
  line-height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-primary {
  background: linear-gradient(135deg, #35b6f4 0%, #1e88e5 100%);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(53, 182, 244, 0.3);
}

.btn-primary:active {
  box-shadow: 0 8rpx 20rpx rgba(53, 182, 244, 0.4);
  transform: translateY(-2rpx);
}

.btn-primary:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

.btn-secondary {
  background: linear-gradient(135deg, #f5f5f5 0%, #efefef 100%);
  color: #374151;
  border: 2rpx solid #e5e7eb;
  font-weight: 600;
}

.btn-secondary:active {
  background: linear-gradient(135deg, #efefef 0%, #e5e5e5 100%);
  transform: translateY(-2rpx);
}

.btn-secondary:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}