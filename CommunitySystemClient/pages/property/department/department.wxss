/* pages/property/department/department.wxss */
/* 部门管理 - 部门信息页面样式 */

.page {
  background-color: #f5f7fa;
  min-height: 100vh;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid #dbeafe;
  border-top-color: #3b82f6;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 16rpx;
}

.loading-text {
  font-size: 12px;
  color: #9ca3af;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 40rpx 20rpx;
  text-align: center;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.empty-text {
  font-size: 13px;
  color: #4b5563;
  margin-bottom: 32rpx;
}

.retry-btn {
  padding: 12rpx 32rpx;
  background-color: #35b6f4;
  color: white;
  border-radius: 8rpx;
  font-size: 12px;
  border: none;
}

/* 内容区域 */
.content {
  padding: 16rpx 16rpx 60rpx;
}

/* 部门头部卡片 */
.department-header {
  background: linear-gradient(135deg, #35b6f4 0%, #1e88e5 100%);
  color: white;
  padding: 24rpx;
  border-radius: 12rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(53, 182, 244, 0.15);
}

.header-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex: 1;
}

.header-icon {
  font-size: 48rpx;
  flex-shrink: 0;
}

.header-info {
  flex: 1;
}

.dept-name {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 6rpx;
}

.dept-code {
  font-size: 12px;
  opacity: 0.8;
}

.member-count {
  background-color: rgba(255, 255, 255, 0.2);
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 12px;
  font-weight: 600;
  white-space: nowrap;
}

/* 标签页导航 */
.tabs-container {
  background-color: white;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
}

.tabs {
  display: flex;
  border-bottom: 1rpx solid #e5e7eb;
}

.tab-item {
  flex: 1;
  padding: 16rpx 0;
  text-align: center;
  font-size: 13px;
  color: #6b7280;
  font-weight: 500;
  border-bottom: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.tab-item.active {
  color: #35b6f4;
  border-bottom-color: #35b6f4;
}

/* 标签页内容 */
.tab-content {
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 信息卡片 */
.info-card {
  background-color: white;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 12px;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 16rpx;
  padding-bottom: 12rpx;
  border-bottom: 1rpx solid #e5e7eb;
}

/* 信息网格 */
.info-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 12rpx 0;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 14rpx 0;
  border-bottom: 1rpx solid #f3f4f6;
  font-size: 12px;
  gap: 12rpx;
}

.info-item:nth-child(2n) {
  padding-left: 12rpx;
}

.info-item:nth-last-child(1),
.info-item:nth-last-child(2) {
  border-bottom: none;
}

.label {
  color: #6b7280;
  font-weight: 500;
  min-width: 70rpx;
  white-space: nowrap;
}

.value {
  color: #323333;
  text-align:left;
  margin-left: 7px;
  flex: 1;
  word-break: break-word;
  font-size: 12px;
}

/* 成员卡片 */
.members-section {
  background-color: white;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.08);
}

.empty-tips {
  text-align: center;
  padding: 40rpx 20rpx;
  color: #9ca3af;
  font-size: 12px;
}

.member-card {
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f3f4f6;
  background: linear-gradient(135deg, #ffffff 0%, #c2e3ff 100%);
  padding: 5px 15px;
  border-radius: 10px;
  margin-bottom: 10px;
}

.member-card:last-child {
  border-bottom: none;
}

.member-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.member-avatar {
  font-size: 32rpx;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f3f4f6;
  border-radius: 8rpx;
  flex-shrink: 0;
}

.member-title {
  flex: 1;
}

.member-name {
  font-size: 13px;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 4rpx;
}

.member-workno {
  font-size: 11px;
  color: #9ca3af;
}

.member-status {
  font-size: 11px;
  font-weight: 600;
  white-space: nowrap;
}

.member-details {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 12rpx;
  padding: 12rpx 0;
  border-top: 1rpx solid #f3f4f6;
}

.detail-item {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.detail-label {
  font-size: 11px;
  color: #9ca3af;
}

.detail-value {
  font-size: 12px;
  color: #1f2937;
  font-weight: 500;
}

/* 统计区域 */
.statistics-section {
  background-color: white;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.08);
}

/* 统计卡片网格 */
.statistics-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 12rpx;
  margin: 16rpx 0;
}

.stat-card {
  background: linear-gradient(135deg, #f3f4f6 0%, #e5e7eb 100%);
  padding: 20rpx;
  border-radius: 8rpx;
  text-align: center;
}

.stat-value {
  font-size: 20px;
  font-weight: bold;
  line-height: 1;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 11px;
  color: #6b7280;
}

/* 完成率卡片 */
.completion-rate-card {
  background-color: #f9fafb;
  padding: 16rpx;
  border-radius: 8rpx;
  margin: 16rpx 0;
  border-left: 4rpx solid #35b6f4;
}

.completion-title {
  font-size: 12px;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 12rpx;
}

.completion-value {
  font-size: 20px;
  font-weight: bold;
  color: #35b6f4;
  margin-bottom: 12rpx;
}

.completion-bar {
  height: 8rpx;
  background-color: #e5e7eb;
  border-radius: 4rpx;
  overflow: hidden;
}

.completion-fill {
  height: 100%;
  background: linear-gradient(90deg, #35b6f4 0%, #1e88e5 100%);
  transition: width 0.3s ease;
}

/* 统计详情 */
.stat-detail {
  margin-top: 20rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #e5e7eb;
}

.detail-title {
  font-size: 12px;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 12rpx;
}

.detail-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #f3f4f6;
  font-size: 14px;
}

.detail-row:last-child {
  border-bottom: none;
}

.row-label {
  color: #6b7280;
  font-weight: 500;
  font-size: 12px;
}

.row-value {
  color: #35b6f4;
  font-weight: 600;
  font-size: 12px;
}