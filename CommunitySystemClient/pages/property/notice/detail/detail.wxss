/* pages/property/notice/detail/detail.wxss */
/* 公告管理 - 详情页面样式 */

.page {
  background-color: #f5f7fa;
  min-height: 100vh;
  padding-bottom: 60rpx;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid #dbeafe;
  border-top-color: #3b82f6;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 16rpx;
}

.loading-text {
  font-size: 14px;
  color: #9ca3af;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 40rpx 20rpx;
  text-align: center;
}

.empty-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
}

.empty-text {
  font-size: 16px;
  color: #4b5563;
  margin-bottom: 32rpx;
}

/* 内容区域 */
.content {
  padding: 20rpx 16rpx;
}

/* 页面头部 */
.header {
  background-color: white;
  padding: 24rpx;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.08);
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 16rpx;
}

.title {
  font-size: 20px;
  font-weight: bold;
  color: #1f2937;
  flex: 1;
  word-break: break-word;
  line-height: 1.4;
}

.category-badge {
  padding: 8rpx 14rpx;
  background-color: #dbeafe;
  color: #1e40af;
  border-radius: 4rpx;
  font-size: 12px;
  white-space: nowrap;
  font-weight: 500;
}

/* 元数据 */
.metadata {
  background-color: white;
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.08);
}

.meta-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
  border-bottom: 1rpx solid #f3f4f6;
  font-size: 14px;
}

.meta-item:last-child {
  border-bottom: none;
}

.meta-label {
  color: #6b7280;
  font-weight: 500;
  min-width: 100rpx;
}

.meta-value {
  color: #1f2937;
  flex: 1;
  text-align: right;
}

/* 分割线 */
.divider {
  height: 8rpx;
  background-color: #f5f7fa;
  margin: 16rpx 0;
}

/* 正文区域 */
.body {
  background-color: white;
  padding: 24rpx;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.08);
  min-height: 120rpx;
}

.notice-content {
  font-size: 14px;
  color: #4b5563;
  line-height: 1.8;
  word-break: break-word;
}
/* 图片区域 */
.notice-images{
    width: 320px;
    height:250px;
    margin: 0 auto !important;
    margin-top: 10px !important;
}
/* 活动信息 */
.activity-info{
    background-color:#ffffff;
    width:98%;
    margin: 0 auto;
    padding:15px 10px;
    border-radius: 10px;
    margin-bottom: 20px;
}
.info-row{
    /* border-bottom: 1rpx solid #f1f1f1; */
    padding-top: 5px;
    padding-bottom: 5px;
    margin: 5px 0px;
    border-radius: 7px;
    padding-left: 5px;
    background-color: #f7f7f7;
}

/* 备注区域 */
.remarks {
  background-color: white;
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.08);
  border-left: 4rpx solid #f59e0b;
}

.remarks-title {
  font-size: 14px;
  font-weight: bold;
  color: #f59e0b;
  margin-bottom: 8rpx;
}

.remarks-content {
  font-size: 13px;
  color: #6b7280;
  line-height: 1.6;
  word-break: break-word;
}

/* 操作按钮 */
.actions {
  display: flex;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.action-btn {
  flex: 1;
  padding: 18px 24px;
  font-size: 14px;
  border: none;
  border-radius: 8rpx;
  height: 48rpx;
  /* line-height: 48rpx; */
  display: flex;
  align-items: center;
  justify-content: center;
}

.edit-btn {
  background-color: #dbeafe;
  color: #35b6f4;
}

.delete-btn {
  background-color: #fee2e2;
  color: #991b1b;
}

.action-btn:active {
  opacity: 0.8;
}

/* 返回按钮 */
.back-btn {
  width: 100% !important;
  padding: 18px 35px ;
  font-size: 14px;
  background-color: #35b6f4;
  color: white;
  border: none;
  border-radius: 8rpx;
  height: 48rpx;
  /* line-height: 48rpx; */
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 16rpx;
}

.back-btn:active {
  opacity: 0.8;
}