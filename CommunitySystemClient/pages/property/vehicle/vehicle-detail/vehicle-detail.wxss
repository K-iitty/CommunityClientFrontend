/* pages/property/vehicle/vehicle-detail/vehicle-detail.wxss */

.page {
  background-color: #f5f7fa;
  min-height: 100vh;
  padding-bottom: 20rpx;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 400rpx;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid #dbeafe;
  border-top-color: #3b82f6;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 16rpx;
}

.loading-text {
  font-size: 12px;
  color: #9ca3af;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 400rpx;
  padding: 40rpx 20rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.empty-text {
  font-size: 13px;
  color: #4b5563;
  margin-bottom: 32rpx;
}

.content {
  padding: 16rpx;
}

.card {
  background-color: white;
  border-radius: 12rpx;
  padding: 16rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.08);
  border-left: 4rpx solid #35b6f4;
}

.card-title {
  font-size: 14px;
  font-weight: bold;
  color: #1f2937;
  padding-bottom: 12rpx;
  margin-bottom: 12rpx;
  border-bottom: 2rpx solid #f3f4f6;
}

.card-content {
  /* content styles */
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #f3f4f6;
  min-height: 32rpx;
}

.info-item:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.info-label {
  color: #6b7280;
  font-weight: 500;
  font-size: 12px;
  min-width: 100rpx;
  flex-shrink: 0;
}

.info-value {
  color: #1f2937;
  text-align: center;
  flex: 1;
  font-size: 12px;
  word-break: break-all;
}

.info-value.status {
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  font-size: 11px;
  margin:0px 120px;
}

.info-value.status.normal {
  background-color: #d1fae5;
  color: #065f46;
}

.info-value.status.abnormal {
  background-color: #fee2e2;
  color: #991b1b;
}

/* 图片容器 */
.image-container {
  display: flex;
  justify-content: center;
  padding: 16rpx 0;
}

.images-container {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  justify-content: flex-start;
  padding: 8rpx 0;
}

.image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  background-color: #f3f4f6;
  border: 1rpx solid #e5e7eb;
}

.images-container .image {
  width: 140rpx;
  height: 140rpx;
}

/* 操作按钮 */
.actions {
  display: flex;
  gap: 12rpx;
  padding: 20rpx 0;
  margin-top: 16rpx;
}

.action-btn {
  flex: 1;
  padding: 10px 10px;
  font-size: 14px;
  border: none;
  border-radius: 8rpx;
  /* height: 44rpx; */
  /* line-height: 44rpx; */
  font-weight: 500;
}

.edit-btn {
  background-color: #35b6f4;
  color: white;
}

.save-btn {
  background-color: #35b6f4;
  color: white;
}

.cancel-btn {
  background-color: #c2c2c2;
  color: white;
}

/* 编辑模式表单样式 */
.form-input {
  width: 100%;
  padding: 8rpx 12rpx;
  border: 1rpx solid #d1d5db;
  border-radius: 6rpx;
  font-size: 14px;
  background-color: #f9fafb;
  box-sizing: border-box;
}

.back-btn {
  width: 100%;
  padding: 14rpx 20rpx;
  margin: 20rpx 0 40rpx;
  font-size: 14px;
  background-color: white;
  color: #35b6f4;
  border: 2rpx solid #35b6f4;
  border-radius: 8rpx;
  /* height: 44rpx; */
  line-height: 44rpx;
  font-weight: 500;
}

/* 图片编辑样式 */
.img-box {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  overflow: hidden;
  background-color: #f3f4f6;
  margin-bottom: 12rpx;
}

.img-box .img {
  width: 100%;
  height: 100%;
  display: block;
}

.image-delete {
  position: absolute;
  top: 4rpx;
  right: 4rpx;
  width: 28rpx;
  height: 28rpx;
  background-color: rgba(0, 0, 0, 0.6);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16px;
  z-index: 1;
}

.image-upload {
  position: relative;
  width: 100%;
  padding-bottom: 100%;
  border: 2rpx dashed #d1d5db;
  border-radius: 8rpx;
  background-color: #f9fafb;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.3s ease;
}

.image-upload:active {
  border-color: #3b82f6;
  background-color: #dbeafe;
}

.upload-icon {
  position: absolute;
  font-size: 32rpx;
  color: #9ca3af;
  top: 20rpx;
}

.upload-text {
  position: absolute;
  font-size: 12px;
  color: #9ca3af;
  bottom: 16rpx;
}

.edit-img-section {
  display: flex;
  flex-direction: column;
}
