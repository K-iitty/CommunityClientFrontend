/* pages/owner/feedback/submit/submit.wxss */
.container {
  padding: 20rpx;
  padding-bottom: 180rpx;
}

.form-section {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 30rpx;
}

.form-item {
  margin-bottom: 40rpx;
  position: relative;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 28rpx;
  color: #2C3E50;
  font-weight: 600;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
}

.required {
  color: #F56C6C;
  margin-right: 8rpx;
}

.form-input {
  background: #F5F7FA;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #2C3E50;
}

.picker {
  background: #F5F7FA;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #2C3E50;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.arrow {
  color: #C0C4CC;
  font-size: 40rpx;
}

.urgency-badge {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.urgency-low {
  background: rgba(144, 147, 153, 0.1);
  color: #909399;
}

.urgency-medium {
  background: rgba(74, 144, 226, 0.1);
  color: #4A90E2;
}

.urgency-high {
  background: rgba(230, 162, 60, 0.1);
  color: #E6A23C;
}

.urgency-critical {
  background: rgba(245, 108, 108, 0.1);
  color: #F56C6C;
}

.form-textarea {
  background: #F5F7FA;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #2C3E50;
  min-height: 200rpx;
  width: 100%;
  box-sizing: border-box;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #909399;
  margin-top: 8rpx;
}

/* 图片上传 */
.image-upload {
  margin-top: 16rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.image-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.image-item image {
  width: 100%;
  height: 100%;
  display: block;
}

.delete-btn {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 48rpx;
  height: 48rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  color: #FFFFFF;
  font-size: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

.upload-btn {
  width: 200rpx;
  height: 200rpx;
  background: #F5F7FA;
  border: 2rpx dashed #C0C4CC;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.upload-icon {
  font-size: 60rpx;
}

.upload-text {
  font-size: 24rpx;
  color: #606266;
}

.upload-hint {
  font-size: 22rpx;
  color: #909399;
}

.upload-tip {
  font-size: 24rpx;
  color: #909399;
  margin-top: 16rpx;
}

/* 操作按钮 */
.action-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #FFFFFF;
  padding: 20rpx 30rpx;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.08);
  display: flex;
  gap: 20rpx;
}

.btn-primary,
.btn-secondary {
  flex: 1;
  padding: 28rpx;
  border-radius: 50rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
}

.btn-primary {
  background: linear-gradient(135deg, #35b6f4 0%, #35b6f4 100%);
  color: #FFFFFF;
  box-shadow: 0 4rpx 16rpx rgba(74, 144, 226, 0.3);
}

.btn-secondary {
  background: #FFFFFF;
  color: #606266;
  border: 2rpx solid #DCDFE6;
}

.btn-primary::after,
.btn-secondary::after {
  border: none;
}

