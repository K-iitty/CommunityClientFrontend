/* pages/owner/profile/edit/edit.wxss */

.container {
  background: #F5F7FA;
  min-height: 100vh;
}

/* 加载状态 */
.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  font-size: 28rpx;
  color: #999999;
}

/* 编辑表单 */
.edit-form {
  padding: 20rpx;
  padding-bottom: 100rpx;
}

/* 表单分组 */
.form-section {
  background: #FFFFFF;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 20rpx;
  padding-bottom: 12rpx;
  border-bottom: 2rpx solid #F0F0F0;
}

/* 表单组 */
.form-group {
  margin-bottom: 20rpx;
}

.form-group:last-child {
  margin-bottom: 0;
}

.form-label {
  display: block;
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  height: 76rpx;
  padding: 12rpx 16rpx;
  border: 1rpx solid #E8E8E8;
  border-radius: 8rpx;
  font-size: 28rpx;
  background: #F9F9F9;
  box-sizing: border-box;
  color: #333333;
  transition: border-color 0.2s ease;
}

.form-input:focus {
  border-color: #4A90E2;
  background: #FFFFFF;
}

.form-input[disabled] {
  background: #F0F0F0;
  color: #999999;
  cursor: not-allowed;
}

/* 预览模式下的文本显示 */
.form-input-preview {
  width: 100%;
  height: 76rpx;
  padding: 12rpx 16rpx;
  border: 1rpx solid #E8E8E8;
  border-radius: 8rpx;
  font-size: 28rpx;
  background: #F0F0F0;
  box-sizing: border-box;
  color: #666666;
  display: flex;
  align-items: center;
}

.form-picker {
  width: 100%;
}

.form-picker .form-input {
  display: flex;
  align-items: center;
}

/* 单选按钮 */
.radio-group {
  display: flex;
  gap: 30rpx;
  flex-wrap: wrap;
}

.radio-item {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #666666;
}

.radio-item radio {
  margin-right: 8rpx;
}

/* 头像部分 */
.avatar-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.avatar-preview {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  overflow: hidden;
  background: #F0F0F0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.12);
}

.avatar-preview image {
  width: 100%;
  height: 100%;
  display: block;
}

.avatar-actions {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.5);
  padding: 8rpx;
  text-align: center;
}

.action-btn {
  background: transparent !important;
  color: #FFFFFF;
  font-size: 20rpx;
  border: none !important;
  padding: 4rpx 8rpx !important;
}

.action-btn::after {
  border: none !important;
}

.avatar-placeholder {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  border: 2rpx dashed #D0D0D0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #FAFAFA;
  cursor: pointer;
  transition: all 0.3s ease;
}

.avatar-placeholder:active {
  border-color: #4A90E2;
  background: #F0F7FF;
}

.placeholder-icon {
  font-size: 60rpx;
  color: #D0D0D0;
  line-height: 1;
}

.placeholder-text {
  font-size: 24rpx;
  color: #999999;
  margin-top: 12rpx;
}

.upload-btn {
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%) !important;
  color: #FFFFFF !important;
  border-radius: 8rpx;
  padding: 12rpx 32rpx !important;
  font-size: 26rpx;
  border: none !important;
  min-height: auto;
  line-height: normal;
}

.upload-btn::after {
  border: none !important;
}

/* 身份证照片 */
.id-card-photos {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.photo-item {
  position: relative;
  width: 160rpx;
  height: 100rpx;
  border-radius: 8rpx;
  overflow: hidden;
  background: #F0F0F0;
}

.photo-item image {
  width: 100%;
  height: 100%;
  display: block;
}

.photo-delete {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.2s ease;
}

.photo-delete text {
  color: #FFFFFF;
  font-size: 20rpx;
}

.photo-item:active .photo-delete {
  opacity: 1;
}

.upload-photo-btn {
  width: 160rpx;
  height: 100rpx;
  border: 2rpx dashed #D0D0D0;
  border-radius: 8rpx;
  background: transparent !important;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 4rpx;
  padding: 0 !important;
}

.upload-photo-btn::after {
  border: none !important;
}

.upload-photo-btn:active {
  background: #F0F7FF !important;
  border-color: #4A90E2;
}

.btn-icon {
  font-size: 40rpx;
  color: #D0D0D0;
  line-height: 1;
}

.upload-photo-btn text:last-child {
  font-size: 20rpx;
  color: #999999;
}

/* 表单底部 */
.form-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #FFFFFF;
  border-top: 1rpx solid #F0F0F0;
  padding: 12rpx 20rpx;
  display: flex;
  gap: 12rpx;
  z-index: 100;
}

/* 修改按钮（预览模式） */
.edit-btn {
  flex: 1;
  height: 72rpx;
  background: linear-gradient(135deg, #45c3ff 0%, #0088cc 100%) !important;
  color: #FFFFFF !important;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none !important;
  line-height: 2.4;
}

.edit-btn::after {
  border: none !important;
}

.edit-btn:active:not([disabled]) {
  opacity: 0.9;
}

/* 保存按钮（编辑模式） */
.save-btn {
  flex: 1;
  height: 72rpx;
  background: linear-gradient(135deg, #4A90E2 0%, #479ef5 100%) !important;
  color: #FFFFFF !important;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none !important;
  line-height: 2.4;
}

.save-btn::after {
  border: none !important;
}

.save-btn:active:not([disabled]) {
  opacity: 0.9;
}

.save-btn[disabled] {
  opacity: 0.6;
}

/* 取消按钮 */
.cancel-btn {
  flex: 1;
  height: 72rpx;
  background: #F0F0F0 !important;
  color: #666666 !important;
  border-radius: 8rpx;
  font-size: 28rpx;
  border: none !important;
  line-height: 2.4;
}

.cancel-btn::after {
  border: none !important;
}

.cancel-btn:active {
  background: #E8E8E8 !important;
}
