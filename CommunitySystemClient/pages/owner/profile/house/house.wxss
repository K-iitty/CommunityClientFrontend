/* pages/owner/profile/house/house.wxss */
.container {
  padding: 0;
  background: #F5F7FA;
  padding-bottom: 100rpx;
}

/* 标签栏 */
.tab-bar {
  display: flex;
  background: #FFFFFF;
  border-bottom: 1rpx solid #F0F2F5;
  position: sticky;
  top: 0;
  z-index: 10;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #909399;
  border-bottom: 4rpx solid transparent;
  transition: all 0.3s ease;
}

.tab-item.active {
  color: #35b6f4;
  border-bottom-color: #35b6f4;
  font-weight: 600;
}

/* 内容区 */
.content {
  padding: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2C3E50;
}

.count {
  font-size: 26rpx;
  color: #909399;
  background: #F5F7FA;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

/* 加载状态 */
.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 60rpx 20rpx;
  text-align: center;
  background: #FFFFFF;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}

.loading-state text {
  font-size: 28rpx;
  color: #909399;
}

/* 状态过滤栏 */
.filter-bar {
  background: #FFFFFF;
  padding: 12rpx 0;
  margin-bottom: 16rpx;
  border-radius: 8rpx;
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.04);
}

.filter-scroll {
  display: flex;
  padding: 0 16rpx;
  overflow-x: auto;
  white-space: nowrap;
}

.filter-item {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 10rpx 16rpx;
  margin-right: 8rpx;
  background: #F5F7FA;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #666;
  white-space: nowrap;
  flex-shrink: 0;
  transition: all 0.3s ease;
}

.filter-item.active {
  background: #35b6f4;
  color: #FFFFFF;
  font-weight: 600;
}

/* 房屋卡片 */
.house-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.house-card {
  background: #FFFFFF;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  display: flex;
  flex-direction: column;
}

.house-card:active {
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.12);
  transform: translateY(-2rpx);
}

/* 房屋图片 */
.house-image-container {
  width: 100%;
  height: 180rpx;
  background: #f0f0f0;
  overflow: hidden;
  position: relative;
}

.house-image {
  width: 100%;
  height: 100%;
  display: block;
  object-fit: cover;
}

.image-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(to bottom, transparent 0%, rgba(0, 0, 0, 0.1) 100%);
  pointer-events: none;
}

/* 卡片内容容器 */
.card-content {
  display: flex;
  flex-direction: column;
  flex: 1;
  pointer-events: auto;
  cursor: pointer;
}

/* 卡片头部 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 16rpx;
  background: #f9f9f9;
  border-bottom: 1rpx solid #f0f0f0;
}

.header-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.house-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.status-tag {
  padding: 6rpx 12rpx;
  border-radius: 6rpx;
  font-size: 22rpx;
  font-weight: 500;
  white-space: nowrap;
  color: #ffffff;
}

.tag-sold {
  background: #35b6f4;
}

.tag-empty {
  background: #fcbb43;
  height: 20px !important;
  line-height: 60%;
  margin-left: 250px;
}

/* 卡片内容 */
.card-body {
  padding: 12rpx 16rpx;
  flex: 1;
}

/* 信息项 */
.info-item {
  display: flex;
  padding: 8rpx 0;
  align-items: flex-start;
  font-size: 24rpx;
}

.info-item .label {
  color: #999;
  font-size: 24rpx;
  width: 100rpx;
  flex-shrink: 0;
  font-weight: 500;
}

.info-item .value {
  color: #333;
  font-size: 24rpx;
  flex: 1;
  word-break: break-all;
}

.contact-phone {
  color: #4a90e2;
  text-decoration: underline;
}

/* 卡片底部 */
.card-footer {
  padding: 8rpx 16rpx;
  display: flex;
  justify-content: flex-end;
  border-top: 1rpx solid #f0f0f0;
  background: #f9f9f9;
}

.btn-link {
  color: #35b6f4;
  font-size: 24rpx;
  padding: 8rpx 12rpx;
}

.btn-link.danger {
  color: #F56C6C;
}

.btn-link::after {
  border: none;
}

/* 申请列表 */
.application-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.app-item {
  background: #FFFFFF;
  border-radius: 12rpx;
  padding: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.app-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.app-title-group {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex: 1;
}

.app-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #2C3E50;
}

.app-house-type {
  font-size: 22rpx;
  color: #999;
  background: #F5F7FA;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
}

.app-status-group {
  display: flex;
  height: 50px !important;
  text-align: center;
  gap: 2px;
}


.app-status {
  /* display: inline-block; */
  padding: 0px 12px;
  border-radius: 20rpx;
  font-size: 12px;
  font-weight: 500;
  color: #FFFFFF;
  white-space: nowrap;
  line-height: center !important;
}

.app-status.tag-success {
    height: 20px !important;
    line-height: 50%;
  background: #2ecc71;
}

.app-status.tag-warning {
    height: 20px !important;
    line-height: 50%;
  background: #ffc15e;
}

.app-status.tag-danger {
    height: 20px !important;
    line-height: 50%;
  background: #e74c3c;
}

.app-status.tag-info {
    height: 20px !important;
    line-height: 50%;
  background: #3498db;
}

.app-body {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

/* 加载更多 */
.load-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  text-align: center;
  background: #FFFFFF;
  border-radius: 12rpx;
  margin-top: 12rpx;
  transition: all 0.3s ease;
}

.load-more:active {
  background: #F5F7FA;
}

.load-more text {
  font-size: 26rpx;
  color: #4A90E2;
  font-weight: 500;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 20rpx;
  text-align: center;
}

.empty-icon {
  font-size: 100rpx;
  color: #DCDFE6;
  margin-bottom: 16rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #909399;
  margin-bottom: 8rpx;
}

.empty-tip {
  font-size: 24rpx;
  color: #C0C4CC;
}

/* 按钮容器 */
.btn-container {
  margin-top: 24rpx;
  padding: 0 20rpx;
}

.btn {
  width: 100%;
  height: 88rpx;
  border: none;
  border-radius: 50rpx;
  font-size: 30rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.btn-primary {
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  color: #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(74, 144, 226, 0.3);
}

.btn::after {
  border: none;
}

