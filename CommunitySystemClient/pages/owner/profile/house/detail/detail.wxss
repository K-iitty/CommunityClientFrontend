/* pages/owner/profile/house/detail/detail.wxss */

.container {
  background: #F5F7FA;
  min-height: 100vh;
  padding-bottom: 20rpx;
}

/* 加载状态 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100vh;
  font-size: 28rpx;
  color: #909399;
}

/* 内容区域 */
.content {
  display: flex;
  flex-direction: column;
}

/* 图片部分 */
.image-section {
  position: relative;
  width: 100%;
  height: 350rpx;
  background: #f0f0f0;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.floor-plan-image {
  width: 100%;
  height: 100%;
  display: block;
  object-fit: cover;
}

.image-tip {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  z-index: 5;
}

/* 房屋头部 */
.house-header {
  padding: 20rpx;
  background: #FFFFFF;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 16rpx;
}

.house-name {
  font-size: 36rpx;
  font-weight: 700;
  color: #2C3E50;
  margin-bottom: 12rpx;
}

.house-meta {
  display: flex;
  gap: 12rpx;
  align-items: center;
}

.house-type {
  background: #f0f0f0;
  color: #666;
  padding: 6rpx 12rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.house-status {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: #fff;
}

.tag-sold {
  background: #4a90e2;
}

.tag-empty {
  background: #ffa500;
}

/* 户型图容器 */
.floor-plan-container {
  position: relative;
  width: 100%;
  background: #f5f5f5;
  border-radius: 8rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  box-sizing: border-box;
}

.floor-plan-image-full {
  width: 100%;
  height: auto;
  max-width: 500rpx;
  display: block;
  border-radius: 8rpx;
  background: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 12rpx;
}

/* 信息分组 */
.section {
  background: #FFFFFF;
  margin: 16rpx 20rpx;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #35b6f4;
  margin-bottom: 16rpx;
  padding-bottom: 12rpx;
  border-bottom: 2rpx solid #e8f0ff;
  display: block;
}

/* 信息列表 */
.info-list {
  display: flex;
  flex-direction: column;
  gap: 0;
}

.info-item {
  display: flex;
  padding: 14rpx 0;
  align-items: flex-start;
  border-bottom: 1rpx solid #f5f5f5;
}

.info-item:last-child {
  border-bottom: none;
}

.info-item .label {
  color: #999;
  font-size: 26rpx;
  width: 140rpx;
  flex-shrink: 0;
  font-weight: 500;
}

.info-item .value {
  color: #333;
  font-size: 26rpx;
  flex: 1;
  word-break: break-all;
  line-height: 1.4;
}

.contact-phone {
  color: #4a90e2;
  text-decoration: underline;
}

.contact-phone:active {
  color: #2570c6;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .section {
    margin: 12rpx 16rpx;
    padding: 16rpx;
  }

  .house-name {
    font-size: 32rpx;
  }

  .info-item .label {
    width: 120rpx;
  }
}