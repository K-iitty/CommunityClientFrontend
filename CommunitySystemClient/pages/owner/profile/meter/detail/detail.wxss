/* pages/owner/profile/meter/detail/detail.wxss */

.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 30rpx;
}

/* 仪表头部 */
.meter-header {
  background: linear-gradient(135deg, #4a90e2 0%, #357abd 100%);
  color: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx 12rpx 0 0;
}

.header-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.meter-title {
  font-size: 32rpx;
  font-weight: 600;
}

.meter-badge {
  background: rgba(255, 255, 255, 0.3);
  padding: 6rpx 12rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
}

.reading-display {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.reading-label {
  font-size: 24rpx;
  opacity: 0.8;
}

.reading-large {
  font-size: 48rpx;
  font-weight: 700;
}

.reading-unit {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 信息区域 */
.section {
  background: white;
  margin: 0 20rpx 16rpx 20rpx;
  border-radius: 8rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  padding: 16rpx;
  background: #f9f9f9;
  border-bottom: 1rpx solid #eee;
}

/* 信息列表 */
.info-list {
  padding: 0;
}

.info-item {
  display: flex;
  padding: 14rpx 16rpx;
  border-bottom: 1rpx solid #f5f5f5;
  align-items: flex-start;
}

.info-item:last-child {
  border-bottom: none;
}

.label {
  color: #999;
  font-size: 26rpx;
  width: 120rpx;
  flex-shrink: 0;
}

.value {
  color: #333;
  font-size: 26rpx;
  flex: 1;
  word-break: break-all;
  line-height: 1.4;
}

/* 备注 */
.remark-text {
  padding: 16rpx;
  color: #666;
  font-size: 26rpx;
  line-height: 1.6;
  word-break: break-all;
}

/* 加载和空状态 */
.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  color: #999;
  font-size: 28rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 30rpx;
}

.empty-icon {
  font-size: 80rpx;
  color: #ddd;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.empty-tip {
  font-size: 24rpx;
  color: #bbb;
}
