/* pages/owner/profile/vehicle/detail/detail.wxss */

.container {
  background: #F5F7FA;
  min-height: 100vh;
  padding-bottom: 20rpx;
}

/* 加载状态 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100vh;
  font-size: 28rpx;
  color: #909399;
}

/* 内容区域 */
.content {
  display: flex;
  flex-direction: column;
}

/* 车辆头部 */
.vehicle-header {
  padding: 20rpx;
  background: #FFFFFF;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 16rpx;
}

.vehicle-name {
  font-size: 36rpx;
  font-weight: 700;
  color: #2C3E50;
  margin-bottom: 12rpx;
  font-family: monospace;
  letter-spacing: 2rpx;
}

.vehicle-meta {
  display: flex;
  gap: 12rpx;
  align-items: center;
}

.vehicle-type {
  background: #f0f0f0;
  color: #666;
  padding: 6rpx 12rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.vehicle-status {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: #fff;
}

.tag-normal {
  background: #2ecc71;
}

.tag-abnormal {
  background: #e74c3c;
}

/* 信息分组 */
.section {
  background: #FFFFFF;
  margin: 16rpx 20rpx;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #35b6f4;
  margin-bottom: 16rpx;
  padding-bottom: 12rpx;
  border-bottom: 2rpx solid #e8f0ff;
  display: block;
}

/* 信息列表 */
.info-list {
  display: flex;
  flex-direction: column;
  gap: 0;
}

.info-item {
  display: flex;
  padding: 14rpx 0;
  align-items: flex-start;
  border-bottom: 1rpx solid #f5f5f5;
}

.info-item:last-child {
  border-bottom: none;
}

.info-item .label {
  color: #999;
  font-size: 26rpx;
  width: 140rpx;
  flex-shrink: 0;
  font-weight: 500;
}

.info-item .value {
  color: #333;
  font-size: 26rpx;
  flex: 1;
  word-break: break-all;
  line-height: 1.4;
}

/* 图片库 */
.image-gallery {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(200rpx, 1fr));
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.image-item {
  position: relative;
  width: 100%;
  padding-bottom: 100%;
  border-radius: 8rpx;
  overflow: hidden;
  background: #f0f0f0;
}

.gallery-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: block;
}

.image-tip {
  display: block;
  font-size: 24rpx;
  color: #999;
  text-align: center;
  padding: 10rpx 0;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .section {
    margin: 12rpx 16rpx;
    padding: 16rpx;
  }

  .vehicle-name {
    font-size: 32rpx;
  }

  .info-item .label {
    width: 120rpx;
  }

  .image-gallery {
    grid-template-columns: repeat(auto-fill, minmax(150rpx, 1fr));
  }
}
