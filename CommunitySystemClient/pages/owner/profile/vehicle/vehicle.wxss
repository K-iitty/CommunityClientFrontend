/* pages/owner/profile/vehicle/vehicle.wxss */
.container {
  padding: 20rpx;
  background: #F5F7FA;
  padding-bottom: 100rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2C3E50;
}

.count {
  font-size: 26rpx;
  color: #909399;
  background: #F5F7FA;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.vehicle-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.vehicle-card {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.vehicle-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #2C3E50;
}

.status-tag {
  display: inline-block;
  padding: 4px 12px;
  border-radius: 5px;
  font-size: 22rpx;
  height:20px !important;
  line-height: 70%;
}

.card-body {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.info-item {
  display: flex;
  font-size: 26rpx;
}

.label {
  color: #909399;
  min-width: 80rpx;
}

.value {
  color: #606266;
  flex: 1;
}

.card-footer {
  display: flex;
  gap: 12rpx;
  padding-top: 12rpx;
  border-top: 1rpx solid #F0F2F5;
}

.btn-link {
  flex: 1;
  background: transparent;
  border: none;
  padding: 8rpx;
  font-size: 24rpx;
  color: #35b6f4;
}

.btn-link.danger {
  color: #F56C6C;
}

.btn-link::after {
  border: none;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 20rpx;
  text-align: center;
  margin-bottom: 20rpx;
}

.empty-icon {
  font-size: 100rpx;
  color: #DCDFE6;
  margin-bottom: 16rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #909399;
}

.btn-container {
  margin-top: 20rpx;
}

.btn {
  width: 100%;
  height: 88rpx;
  border: none;
  border-radius: 50rpx;
  font-size: 30rpx;
  font-weight: 600;
}

.btn-primary {
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  color: #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(74, 144, 226, 0.3);
}

.btn::after {
  border: none;
}














