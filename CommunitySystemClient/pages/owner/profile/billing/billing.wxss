/* pages/owner/profile/billing/billing.wxss */
.container {
  padding: 20rpx;
  background: #F5F7FA;
  padding-bottom: 100rpx;
}

/* 汇总卡片 */
.summary-card {
  display: flex;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.summary-item {
  flex: 1;
  background: linear-gradient(135deg, #68ccfa 0%, #c285ff 100%);
  border-radius: 12rpx;
  padding: 20rpx;
  color: white;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.summary-item:nth-child(2) {
  background: linear-gradient(135deg, #f093fb 0%, #ff7789 100%);
}

.summary-label {
  font-size: 24rpx;
  opacity: 0.9;
}

.summary-amount {
  font-size: 32rpx;
  font-weight: 600;
}

.summary-total {
  font-size: 28rpx;
  font-weight: 600;
}

/* 分类统计 */
.category-summary {
  display: flex;
  gap: 12rpx;
  margin-bottom: 20rpx;
  overflow-x: auto;
  padding: 0 0 8rpx 0;
}

.category-item {
  background: white;
  border-radius: 12rpx;
  padding: 16rpx;
  min-width: 100rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  align-items: center;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.04);
}

.category-label {
  font-size: 22rpx;
  color: #606266;
}

.category-count {
  font-size: 28rpx;
  font-weight: 600;
  color: #2C3E50;
}

.category-amount {
  font-size: 20rpx;
  color: #F56C6C;
  font-weight: 500;
}

/* 标签页 */
.tab-container {
  margin-bottom: 16rpx;
  background: white;
  border-radius: 12rpx;
  padding: 0;
  overflow-x: auto;
  display: block;
}

.tab-bar {
  display: flex;
  gap: 0;
  border-bottom: 2rpx solid #F0F2F5;
}

.tab-item {
  flex: 1;
  padding: 12rpx 16rpx;
  text-align: center;
  font-size: 26rpx;
  color: #909399;
  border-bottom: 3rpx solid transparent;
  min-width: 80rpx;
}

.tab-item.active {
  color: #2C3E50;
  border-bottom-color: #4A90E2;
  font-weight: 600;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2C3E50;
}

.count {
  font-size: 26rpx;
  color: #909399;
  background: #F5F7FA;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.bill-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.bill-card {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.bill-type {
  font-size: 28rpx;
  font-weight: 600;
  color: #2C3E50;
}

.bill-status {
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}

.card-body {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
}

.info-item {
  display: flex;
  font-size: 26rpx;
  margin-bottom: 8rpx;
}

.label {
  color: #909399;
  min-width: 80rpx;
}

.amount {
  color: #F56C6C;
  flex: 1;
  font-weight: 600;
  font-size: 32rpx;
}

.value {
  color: #606266;
  flex: 1;
}

.card-footer {
  display: flex;
  gap: 12rpx;
  padding-top: 12rpx;
  border-top: 1rpx solid #F0F2F5;
}

.btn-link {
  flex: 1;
  background: transparent;
  border: none;
  padding: 8rpx;
  font-size: 24rpx;
  color: #4A90E2;
  text-align: center;
}

.btn-link::after {
  border: none;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 20rpx;
  text-align: center;
}

.empty-icon {
  font-size: 100rpx;
  color: #DCDFE6;
  margin-bottom: 16rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #909399;
}

/* 账单分类标签 */
.bill-category {
  display: inline-block;
  padding: 10px 10px;
  border-radius: 20rpx;
  height: 10px;
  line-height: 50%;
  font-size: 22rpx;
  font-weight: 500;
}

.tag-electric {
  background: #FFF7E6;
  color: #FF9C6E;
}

.tag-water {
  background: #E6F7FF;
  color: #1890FF;
}

.tag-gas {
  background: #F6FFED;
  color: #52C41A;
}

.tag-parking {
  background: #F9F0FF;
  color: #EB2F96;
}

.tag-issue {
  background: #FFE7E6;
  color: #E74C3C;
}

/* 分页控制 */
.pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx;
  background: white;
  border-radius: 12rpx;
  margin-top: 20rpx;
}

.btn-prev,
.btn-next {
  flex: 0 0 auto;
  padding: 8rpx 16rpx;
  background: #4A90E2;
  color: white;
  border: none;
  border-radius: 8rpx;
  font-size: 24rpx;
  min-width: 80rpx;
}

.btn-prev::after,
.btn-next::after {
  border: none;
}

.btn-prev:disabled,
.btn-next:disabled,
.btn-prev.disabled,
.btn-next.disabled {
  background: #D3D7DE;
  color: #909399;
  cursor: not-allowed;
}

.page-info {
  flex: 1;
  text-align: center;
  font-size: 24rpx;
  color: #606266;
}






