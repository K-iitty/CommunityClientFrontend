/* ============================================
   业主首页 - 现代简约设计
   主题色: #45c3ff
   ============================================ */

.container {
  padding: 0;
  background: #FFFFFF;
  min-height: 100vh;
}

/* ============================================
   轮播图 - 顶部展示
   ============================================ */
.carousel-container {
  width: 100%;
  height: 300rpx;
  overflow: hidden;
  background: #f5f5f5;
}

.carousel {
  width: 100%;
  height: 100%;
}

.carousel-item {
  width: 100%;
  height: 100%;
}

.carousel-image {
  width: 100%;
  height: 100%;
  display: block;
}

/* ============================================
   用户卡片 - 顶部欢迎区
   ============================================ */
.user-card {
  background: linear-gradient(135deg, #45c3ff 0%, #0088cc 100%);
  color: #FFFFFF;
  padding: 32rpx 24rpx;
  margin: 0;
  border-radius: 0 0 32rpx 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(69, 195, 255, 0.25);
  animation: slideDown 0.5s ease-out;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.user-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.3);
  border: 2rpx solid #FFFFFF;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: 600;
  color: #FFFFFF;
  margin-right: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
  letter-spacing: 0.5rpx;
}

.user-status {
  display: flex;
  gap: 8rpx;
  flex-wrap: wrap;
}

.status-tag {
  display: inline-block;
  line-height: 0.6;
  height: 20px !important;
  padding: 6rpx 14rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  background: rgba(255, 255, 255, 0.25) !important;
  color: #FFFFFF;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.status-tag.verified {
  background: rgba(103, 194, 58, 0.4);
  color: #FFFFFF;
}

.status-tag.unverified {
  background: rgba(230, 162, 60, 0.4);
  color: #FFFFFF;
}

.status-tag:active {
  transform: scale(0.95);
}

.user-greeting {
  font-size: 26rpx;
  opacity: 0.95;
  font-weight: 500;
  margin-top: 12rpx;
}

/* ============================================
   快捷功能栏 - 3列网格
   ============================================ */
.quick-actions {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
  margin: 0;
  padding: 16rpx;
  background: #FFFFFF;
  border-bottom: 1rpx solid #f0f4f8;
}

.action-item {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 20rpx 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(69, 195, 255, 0.08);
  border: 1rpx solid #f0f4f8;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  cursor: pointer;
  user-select: none;
  -webkit-user-select: none;
  -webkit-tap-highlight-color: transparent;
  min-height: 110rpx;
  position: relative;
  z-index: 1;
  border: none;
  outline: none;
  animation: fadeInUp 0.5s ease-out both;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.action-item:nth-child(1) {
  animation-delay: 0.05s;
}
.action-item:nth-child(2) {
  animation-delay: 0.1s;
}
.action-item:nth-child(3) {
  animation-delay: 0.15s;
}
.action-item:nth-child(4) {
  animation-delay: 0.2s;
}
.action-item:nth-child(5) {
  animation-delay: 0.25s;
}
.action-item:nth-child(6) {
  animation-delay: 0.3s;
}

.action-item:active {
  transform: translateY(-4rpx) scale(0.96);
  box-shadow: 0 8rpx 20rpx rgba(69, 195, 255, 0.2);
  border-color: #45c3ff;
  background: linear-gradient(135deg, rgba(69, 195, 255, 0.05) 0%, rgba(0, 136, 204, 0.02) 100%);
}

.action-item:hover {
  box-shadow: 0 4rpx 12rpx rgba(69, 195, 255, 0.12);
}

.action-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 8rpx;
  line-height: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.3s ease;
  border-radius: 16rpx;
  position: relative;
  overflow: hidden;
}

/* 通知图标 - 蓝色 */
.notification-icon {
  background: linear-gradient(135deg, #9dd8ff 0%, #3fb0fc 100%);
}

/* 反馈图标 - 绿色 */
.feedback-icon {
  background: linear-gradient(135deg, #26e475d7 0%, #98ffc3e1 100%);
}

/* 个人图标 - 紫色 */
.profile-icon {
  background: linear-gradient(135deg, #e7aaff 0%, #8e44ad 100%);
}

/* 房屋图标 - 橙色 */
.house-icon {
  background: linear-gradient(135deg, #ffd086 0%, #fdb034 100%);
}

/* 车辆图标 - 红色 */
.vehicle-icon {
  background: linear-gradient(135deg, #ffaea5 0%, #ff5c49 100%);
}

/* 车位图标 - 粉色 */
.parking-icon {
  background: linear-gradient(135deg, #ff4a87 0%, #fa91bb 100%);
}

.action-image {
  width: 48rpx;
  height: 48rpx;
  display: block;
  opacity: 0.85;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
}

.action-item:active .action-icon {
  transform: scale(1.15) rotate(-5deg);
}

.action-text {
  font-size: 22rpx;
  color: #333333;
  font-weight: 500;
  text-align: center;
  display: block;
  word-break: break-word;
}

/* ============================================
   房屋列表
   ============================================ */
.section {
  margin: 0;
  padding: 24rpx 16rpx;
  background: #FFFFFF;
  border-bottom: 8rpx solid #f8f9fa;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333333;
  padding-left: 12rpx;
  border-left: 4rpx solid #45c3ff;
  margin: 0;
}

.more-link {
  font-size: 24rpx;
  color: #45c3ff;
  cursor: pointer;
  font-weight: 500;
  transition: all 0.3s ease;
}

.more-link:active {
  opacity: 0.7;
  transform: scale(0.95);
}

.list {
  display: flex;
  flex-direction: column;
  gap: 0;
}

.list-item {
  display: flex;
  align-items: center;
  padding: 16rpx 12rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
  border: 1rpx solid transparent;
  cursor: pointer;
  user-select: none;
  -webkit-user-select: none;
}

.list-item:last-child {
  border-bottom: none;
}

.list-item:active {
  background: #f0f8ff;
  border-color: #45c3ff;
  box-shadow: 0 2rpx 8rpx rgba(69, 195, 255, 0.12);
  transform: translateX(2rpx);
}

.list-item-content {
  flex: 1;
  padding: 8rpx 0;
}

.list-item-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 4rpx;
}

.list-item-desc {
  font-size: 24rpx;
  color: #999999;
}

.list-item-meta {
  display: flex;
  gap: 8rpx;
  margin-top: 8rpx;
  flex-wrap: wrap;
}

.meta-tag {
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  background: rgba(69, 195, 255, 0.12);
  color: #45c3ff;
  font-weight: 500;
}

.list-item-arrow {
  color: #45c3ff;
  font-size: 28rpx;
  font-weight: 700;
  transition: all 0.3s ease;
  padding: 0 8rpx;
}

.list-item:active .list-item-arrow {
  transform: translateX(4rpx);
  color: #0088cc;
}

/* ============================================
   公告列表
   ============================================ */
.notices {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.notice-item {
  padding: 0;
  background: #FFFFFF;
  border-radius: 12rpx;
  border: 1rpx solid #f0f4f8;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  cursor: pointer;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.02);
  overflow: hidden;
}

.notice-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 16rpx rgba(69, 195, 255, 0.15);
  border-color: #45c3ff;
}

/* 图片容器 */
.notice-image-container {
  width: 100%;
  height: 180px;
  overflow: hidden;
  background: #f0f4f8;
}

.notice-image {
  width: 100%;
  height: 100%;
  display: block;
}

/* 公告内容 */
.notice-content {
  padding: 16rpx;
}

.notice-top {
  display: flex;
  gap: 8rpx;
  align-items: flex-start;
  margin-bottom: 8rpx;
}

.notice-title {
  flex: 1;
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  line-height: 1.4;
}

.notice-type-tag {
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  background: rgba(69, 195, 255, 0.12);
  color: #45c3ff;
  white-space: nowrap;
  flex-shrink: 0;
  font-weight: 500;
}

.notice-desc {
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 8rpx;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.notice-meta {
  display: flex;
  gap: 12rpx;
  font-size: 24rpx;
  color: #999999;
}

.notice-date {
  font-size: 24rpx;
  color: #999999;
}

/* 查看更多 */
.view-all-notice {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 16rpx;
  background: linear-gradient(135deg, rgba(69, 195, 255, 0.05) 0%, rgba(0, 136, 204, 0.02) 100%);
  border: 1rpx dashed #45c3ff;
  border-radius: 12rpx;
  cursor: pointer;
  transition: all 0.3s ease;
}

.view-all-notice:active {
  transform: scale(0.98);
  background: linear-gradient(135deg, rgba(69, 195, 255, 0.1) 0%, rgba(0, 136, 204, 0.05) 100%);
}

.view-all-text {
  font-size: 26rpx;
  color: #45c3ff;
  font-weight: 500;
}

.view-all-arrow {
  font-size: 26rpx;
  color: #45c3ff;
  font-weight: 700;
}

/* ============================================
   加载状态
   ============================================ */
.loading {
  text-align: center;
  padding: 40rpx 20rpx;
  color: #45c3ff;
  font-size: 26rpx;
  font-weight: 500;
}

.loading::before {
  content: '';
  display: inline-block;
  width: 20rpx;
  height: 20rpx;
  margin-right: 8rpx;
  border: 2rpx solid #45c3ff;
  border-top-color: transparent;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  vertical-align: middle;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

