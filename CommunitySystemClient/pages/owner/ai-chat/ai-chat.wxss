/* ===== 全局button样式重置 ===== */
button {
  background: transparent !important;
  border: none !important;
  padding: 0 !important;
  margin: 0 !important;
  outline: none !important;
}

button::after {
  border: none !important;
  background: transparent !important;
}

button:after {
  border: none !important;
  background: transparent !important;
}

.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #F5F7FA;
}

/* 顶部标题栏 */
.chat-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 24rpx;
  background: linear-gradient(135deg, #35b6f4 0%, #35b6f4 100%);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  z-index:10;                                                                                
}

.header-title {
  font-size: 34rpx;
  color: #FFFFFF;
  font-weight: 600;
}

.clear-btn {
  background: rgb(248, 248, 248) !important;
  color: #35b6f4 !important;
  border-radius: 12rpx;
  padding: 2rpx 12rpx !important;
  font-size: 14px !important;
  /* border: 2rpx solid rgb(255, 255, 255) !important; */
  transition: all 0.3s ease;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  height: auto;
  line-height: normal;
}

.clear-btn:active {
  background: rgba(255, 255, 255, 0.3) !important;
  border-color: rgba(255, 255, 255, 0.6) !important;
  transform: scale(0.95);
}

.clear-btn::after {
  border: none;
}

/* 消息区域 */
.messages-area {
  flex: 1;
  overflow-y: auto;
  padding: 20rpx 0;
  background: #F5F7FA;
}

.messages-list {
  display: flex;
  flex-direction: column;
  padding: 0 20rpx;
}

.message-wrapper {
  margin-bottom: 16rpx;
}

/* 消息行布局 */
.message-row {
  display: flex;
  align-items: flex-end;
  gap: 12rpx;
}

.assistant-row {
  justify-content: flex-start;
}

.user-row {
  justify-content: flex-end;
}

/* 头像 */
.avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  flex-shrink: 0;
  position: relative;
  overflow: hidden;
}

.assistant-avatar {
  background: linear-gradient(135deg, #3090ff 0%, #99ccff 100%);
  box-shadow: 0 4rpx 12rpx rgba(79, 161, 255, 0.3);
}

.user-avatar {
  background: linear-gradient(135deg, #8ad4ff 0%, #347afd 100%);
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 157, 0.3);
}

.avatar-image {
  width: 90%;
  height: 90%;
  display: block;
  opacity: 0.9;
}

/* 消息内容包装器 */
.message-content-wrapper {
  display: flex;
  flex-direction: column;
  max-width: 70%;
}

.user-message-wrapper {
  align-items: flex-end;
}

.message-text {
  user-select: text;
  word-wrap: break-word;
  word-break: break-word;
}

/* 消息气泡 */
.message-bubble {
  padding: 16rpx 20rpx;
  border-radius: 16rpx;
  word-wrap: break-word;
  word-break: break-word;
  line-height: 1.5;
  font-size: 28rpx;
  animation: slideIn 0.3s ease-out;
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateY(10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.assistant-bubble {
  background: #FFFFFF;
  color: #333333;
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.08);
  border-bottom-left-radius: 4rpx;
}

.user-bubble {
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  color: #FFFFFF;
  border-bottom-right-radius: 4rpx;
}

/* 打字指示器 */
.typing-indicator {
  display: flex;
  gap: 4rpx;
  margin-top: 8rpx;
  align-items: center;
  height: 20rpx;
}

.typing-indicator .dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background: #999999;
  animation: typing 1.4s infinite;
}

.typing-indicator .dot:nth-child(2) {
  animation-delay: 0.2s;
}

.typing-indicator .dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes typing {
  0%, 60%, 100% {
    opacity: 0.5;
    transform: translateY(0);
  }
  30% {
    opacity: 1;
    transform: translateY(-8rpx);
  }
}

/* 消息操作和时间 */
.message-actions {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-top: 6rpx;
  font-size: 20rpx;
}

.action-btn {
  background: transparent !important;
  border-radius: 20px;
  border: 1rpx solid #b3b3b3 !important;
  color: #b4b4b4;
  padding: 4rpx 8rpx !important;
  font-size: 25rpx;
  transition: all 0.2s ease;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  margin-top: 5px !important;
  margin-left: 10px !important;
  height: auto;
  width: 60px !important;
  line-height: normal;
}

.action-btn::after {
  border: none;
}

.action-btn:active {
  background: rgba(74, 144, 226, 0.1) !important;
  border-color: #357ABD !important;
  color: #357ABD;
}

.message-time {
  font-size: 20rpx;
  color: #BFBFBF;
}

.assistant-row .message-time {
  margin-left: 8rpx;
}

.user-row .message-time {
  margin-right: 8rpx;
}

/* 底部间距 */
.message-bottom-space {
  height: 20rpx;
}

/* 输入区域 */
.input-area {
  background: #FFFFFF;
  border-top: 1rpx solid #F0F2F5;
  padding: 12rpx 20rpx 20rpx;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.input-wrapper {
  display: flex;
  gap: 12rpx;
  align-items: center;
  margin-bottom: 12rpx;
}

.input-field {
  flex: 1;
  height: 76rpx;
  padding: 12rpx 16rpx;
  border: 1rpx solid #E8E8E8;
  border-radius: 24rpx;
  font-size: 28rpx;
  background: #F5F7FA;
}

.input-field::placeholder {
  color: #BFBFBF;
}

.send-btn-1 {
  width: 90rpx !important;
  height: 90rpx !important;
  background: linear-gradient(135deg, #35b6f4 0%, #35b6f4 100%) !important;
  color: #FFFFFF;
  border-radius: 15rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none !important;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 !important;
  line-height: normal;
}

.send-btn-1:active:not(.disabled) {
  box-shadow: 0 4rpx 12rpx rgba(74, 144, 226, 0.4);
  transform: scale(0.96);
}

.send-btn-1.disabled {
  opacity: 0.6;
}

/* 提示语 */
.tips {
  font-size: 22rpx;
  color: #999999;
  text-align: center;
  display: block;
}

/* 空消息状态 */
.messages-list:empty::before {
  content: '开始您的对话吧！';
  text-align: center;
  padding: 200rpx 20rpx;
  color: #BFBFBF;
  font-size: 28rpx;
}

/* 响应式调整 */
@media (min-width: 800px) {
  .message-content-wrapper {
    max-width: 50%;
  }
}
